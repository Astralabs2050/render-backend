{
  "info": {
    "name": "Maker Jobs Endpoint Test",
    "description": "Test collection for /marketplace/maker/jobs endpoint",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Maker Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"samueladelowo3@gmail.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('jwt_token', response.data.access_token);",
              "    pm.test('Login successful', function () {",
              "        pm.response.to.have.status(200);",
              "    });",
              "} else {",
              "    pm.test('Login failed', function () {",
              "        pm.response.to.have.status(200);",
              "    });",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Get Maker Jobs - No Filter",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/marketplace/maker/jobs",
          "host": ["{{base_url}}"],
          "path": ["marketplace", "maker", "jobs"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an array', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    },

    {
      "name": "3. Get Maker Jobs - Filter: applications",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/marketplace/maker/jobs?filter=applications",
          "host": ["{{base_url}}"],
          "path": ["marketplace", "maker", "jobs"],
          "query": [
            {
              "key": "filter",
              "value": "applications"
            }
          ]
        }
      }
    },
    {
      "name": "4. Get Maker Jobs - Filter: ongoing",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/marketplace/maker/jobs?filter=ongoing",
          "host": ["{{base_url}}"],
          "path": ["marketplace", "maker", "jobs"],
          "query": [
            {
              "key": "filter",
              "value": "ongoing"
            }
          ]
        }
      }
    },
    {
      "name": "5. Get Maker Jobs - Filter: completed",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/marketplace/maker/jobs?filter=completed",
          "host": ["{{base_url}}"],
          "path": ["marketplace", "maker", "jobs"],
          "query": [
            {
              "key": "filter",
              "value": "completed"
            }
          ]
        }
      }
    },
    {
      "name": "6. Test RBAC - Creator Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"samueladelowo3@gmail.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('jwt_token', response.data.access_token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "7. Test RBAC - Creator Access (Should Fail)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/marketplace/maker/jobs",
          "host": ["{{base_url}}"],
          "path": ["marketplace", "maker", "jobs"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Creator access should be denied', function () {",
              "    pm.response.to.have.status(500);",
              "});",
              "",
              "pm.test('Error message should mention makers only', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include('Only makers can access this endpoint');",
              "});"
            ]
          }
        }
      ]
    }
  ]
}