{
  "info": {
    "name": "AI Chat, Profile & Brand API",
    "description": "Collection for AI chat, profile, and brand endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "chat_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "collection_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "AI Chat",
      "item": [
        {
          "name": "Start Chat",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ai-chat/start",
              "host": ["{{base_url}}"],
              "path": ["ai-chat", "start"]
            }
          },
          "response": []
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Hello, how can you help me today?\",\n  \"chatId\": \"{{chat_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ai-chat/message",
              "host": ["{{base_url}}"],
              "path": ["ai-chat", "message"]
            }
          },
          "response": []
        },
        {
          "name": "Get Stream Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ai-chat/token",
              "host": ["{{base_url}}"],
              "path": ["ai-chat", "token"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Chats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ai-chat",
              "host": ["{{base_url}}"],
              "path": ["ai-chat"]
            }
          },
          "response": []
        },
        {
          "name": "Get Specific Chat",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/ai-chat/{{chat_id}}",
              "host": ["{{base_url}}"],
              "path": ["ai-chat", "{{chat_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Profile Management",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"bio\": \"Updated bio\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Brand Management",
      "item": [
        {
          "name": "Create Brand Details",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "brandName",
                  "value": "Fashion Brand Co",
                  "type": "text"
                },
                {
                  "key": "brandOrigin",
                  "value": "New York, USA",
                  "type": "text"
                },
                {
                  "key": "brandStory",
                  "value": "A sustainable fashion brand focused on ethical manufacturing and timeless designs.",
                  "type": "text"
                },
                {
                  "key": "brandLogo",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/brand-details",
              "host": ["{{base_url}}"],
              "path": ["users", "brand-details"]
            }
          },
          "response": []
        },
        {
          "name": "Create Collection",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "collectionName",
                  "value": "Summer Collection 2024",
                  "type": "text"
                },
                {
                  "key": "quantity",
                  "value": "50",
                  "type": "text"
                },
                {
                  "key": "pricePerOutfit",
                  "value": "299.99",
                  "type": "text"
                },
                {
                  "key": "deliveryTimeLead",
                  "value": "2-3 weeks",
                  "type": "text"
                },
                {
                  "key": "deliveryRegion",
                  "value": "North America",
                  "type": "text"
                },
                {
                  "key": "designImages",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "designImages",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "designImages",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "designImages",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/users/collections",
              "host": ["{{base_url}}"],
              "path": ["users", "collections"]
            }
          },
          "response": []
        },
        {
          "name": "Process Collection Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentMethod\": \"wallet\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/collections/{{collection_id}}/payment",
              "host": ["{{base_url}}"],
              "path": ["users", "collections", "{{collection_id}}", "payment"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}